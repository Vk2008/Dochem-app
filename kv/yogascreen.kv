#:import utils kivy.utils
<YogaScreen>:
    FloatLayout:
        canvas:
            Color: 
                rgb: utils.get_color_from_hex('#a0d9ef')
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 1
            Carousel:
                direction: 'right'
                GridLayout:
                    cols: 1
                    Label: 
                        text: '15 minute Full-Body Workout'
                        color: '#000221'
                    VideoPlayer: 
                        source: r'y.mp4'
                        state: 'stop'
                GridLayout:
                    cols: 1
                    Label:  
                        text: 'Full Body Workout'
                        color: '#000221'
                    VideoPlayer: 
                        source: r'y1.mp4'
                        state: 'stop'
            
            MDBoxLayout:
                id: menu
                rows: 1
                pos_hint: {'top': .1, 'left': 1}
                size_hint: 1,.09 
                adaptive_height: True
                spacing: 150
                canvas:
                    Color: 
                        rgb: utils.get_color_from_hex('##fffada')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        
                MDIconButton:
                    icon: 'account-circle'
                    

                MDIconButton:
                    icon: 'home'
                    on_press: app.change_screen('home_screen')
                    
                
                MDIconButton:
                    icon: 'help'
        